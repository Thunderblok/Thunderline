{
  // VS Code ElixirLS configuration - Force use current workspace directory
  "elixirLS.dialyzerEnabled": false,
  "elixirLS.fetchDeps": true,
  "elixirLS.mixEnv": "dev", 
  "elixirLS.logLevel": "info",
  "elixirLS.useCurrentRootFolderAsProjectDir": true,
  "elixirLS.autoBuild": true,
  "files.watcherExclude": {
    "**/deps/**": true,
    "**/_build/**": true,
    "**/.elixir_ls/**": true
  },
  "files.associations": {
    "*.exs": "elixir",
    "*.ex": "elixir"
  },
  "[elixir]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordBasedSuggestions": "off",
    "editor.trimAutoWhitespace": true
  }
}
